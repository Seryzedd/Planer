{% extends 'base.html.twig' %}

{% block title %}Teams manager{% endblock %}

{% block body %}
    <div class='w-100'>
        <div class="d-flex justify-content-between align-items-baseline">
            <h1 class="text-primary mb-0">Team list</h1>
            <div>
                <button class="btn btn-outline-primary" id="filter_my_team" my-team-id="{{ app.user.team.id }}">My teams</button>
                <a href='{{ path("admin_teams_new") }}' class="btn btn-outline-primary">New</a>
            </div>
        </div>
        {% if teams|length == 0 %}
            <h2 class="text-muted text-center">No teams available.</h2>
        {% endif %}

        <div class="">
            {% for team in teams %}
                <div class="row bg-light rounded align-items-center border my-2 py-4" team-id="{{ team.id }}">
                    <div class="col-12"><h4 class='font-weight-bold mb-2 border-bottom pl-4 border-primary'>{{ team.name }}</h4></div>
                    <div class="col-6">{{ team.description }}</div>
                    <div class="col-2"><strong>Manager : </strong>{{ team.lead.username }}</div>
                    <div class="col-4 d-flex justify-content-between align-items-center">
                        <div class="text-wrap mb-0">
                            <p class='mb-0'><strong>Members :</strong></p>
                            {% for member in team.users %}
                                <p class='bg-secondary float-left px-2 py-1 mx-2 rounded mb-0 font-weight-bold'>
                                {{ member.username }}
                                    <a href="{{path('admin_teams_user_remve', {'id': team.id, 'user': member.id})}}" class="btn btn-secondary p-0" title="remove user from team"><i class="fas fa-times"></i></a>
                                </p>
                            {% endfor %}
                        </div>
                        <button class="btn btn-light" data-toggle="modal" data-target="#addUsersModal"><i class="fas fa-plus"></i></button>
                    </div>
                </div>

                <div class="modal fade" id="addUsersModal" tabindex="-1" role="dialog" aria-labelledby="ModalLongTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="ModalLongTitle">Add Users</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form action="{{ path('admin_teams_user_add', {'id': team.id}) }}">
                                <div class="mt-2 text-center">
                                    <div id="users" class='d-flex justify-content-center mb-2'></div>

                                    <div class="dropdown mb-3">
                                        <a class="btn btn-outline-primary dropdown-toggle" href="#" role="button" id="add_user_button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-plus mr-2"></i>
                                            add user
                                        </a>

                                        <div class="dropdown-menu" aria-labelledby="add_user_button">
                                            {% for user in users %}
                                                <a class="dropdown-item" href="#">{{ user.email }}</a>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Validate</button>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            
                        </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
            
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('form .dropdown-item').on('click', function () {
            var usersAdded =  $("#users input").length;
            $("#users").append($('<input type="hidden" name="user_' + usersAdded++ + '" value="' + $(this).text() + '">'));

            $("#users").append($('<div class="bg-primary rounded p-2 mx-2">' + $(this).text() + '</div>'));

            $(this).remove();

            var dropdownmenu = $('.dropdown-menu[aria-labelledby="add_user_button"]');

            if (dropdownmenu.find('a.dropdown-item').length === 0) {
                
                $('#add_user_button').hide('slow');
            }
        })

        $('#filter_my_team').on('click', function () {
            $('div.row:not([team-id="' + $(this).attr('my-team-id') + '"])').toggle();
        })
    </script>
{% endblock %}