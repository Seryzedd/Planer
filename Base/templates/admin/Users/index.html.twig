{% extends 'base.html.twig' %}

{% block title %}Admin Users{% endblock %}

{% block breadcrumb %}
    {% set content = {
        'Admin': 'admin_index',
        'Users': 'admin_users'
        } 
    %}

    {{ parent() }}
{% endblock %}

{% block body %}
    <div class='w-100'>
        <h1 class="text-primary">Users list</h1>
        <div class="mb-4">
            <input class='form-control' id='user-filter' placeholder='filter users'/>
            <div id="someElem" style="position:relative;"></div>
        </div>
        <div class="row justify-content-center align-items-stretch text-center">
            
            {% for user in users %}
                <div class="col-12 col-md-3 mb-2 user-card" user-name="{{ user.userName }}" user-email="{{ user.email }}" user-job="{{ user.job }}" user-roles="{% for role in user.roles %}{{ role|replace({'_': ' '})|replace({'ROLE': ''})|lower }}{% endfor %}">
                    <a href="{{ path('admin_user_view', {id: user.id}) }}" class="p-2 btn btn-light w-100">
                        <p class="mb-0 text-right">
                            {% for role in user.roles %}
                                {% if not loop.first %}<span class='text-primary'>|</span>{% endif %}
                                {{ role|replace({'_': ' '})|replace({'ROLE': ''})|lower }}
                            {% endfor %}
                        </p>
                        <h3 class="text-primary mb-0">{{ user.userName }}</h3>
                        <p class='font-italic mb-0'>{{ user.job }}</p>
                        <p class='text-dark font-weight-bold mb-0'>{{ user.firstName|upper }} {{ user.lastName }}</p>
                        <p class='text-dark mb-0'>{{ user.email }}</p>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block role_form %}
    <div class=''>
        <div class="dropdown float-left mr-2">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Add Role
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                {% for rolename in constant('App\\Entity\\User\\User::ROLE_LIST') %}
                    {% if rolename not in user.roles %}
                        <a class="dropdown-item" href="{{ path('admin_user_add_role', {'id': user.id, 'role': rolename}) }}">{{ rolename|replace({'_': ' '})|replace({'ROLE': ''})|lower }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        <div class="dropdown float-left">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Remove Role
            </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            {% for rolename in user.roles %}
                <a class="dropdown-item" href="{{ path('admin_user_remove_role', {'id': user.id, 'role': rolename}) }}">{{ rolename|replace({'_': ' '})|replace({'ROLE': ''})|lower }}</a>
            {% endfor %}
        </div>
    </div>
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script>
        let data = [];
        {% for user in users %}
            data.push("{{ user.userName }}");
            data.push("{{ user.email }}");
            data.push("{{ user.job }}");
        {% endfor %}
        
        $( "#user-filter" ).autocomplete({
            source: data,
            appendTo: "#someElem"
            });

        $('.ui-corner-all').on('click', function() {
            filterUsers($('#user-filter').val());
        })

        $('.ui-autocomplete-input').on('input', function() {
            filterUsers($(this).val());
        })

        function filterUsers(value) {
            $('.user-card').hide();

           if (value.length > 0) {
                $('.user-card[user-name*="' + value + '"]').show();
                $('.user-card[user-job*="' + value + '"]').show();
                $('.user-card[user-email*="' + value + '"]').show();
           } else {
                $('.user-card').show();
           }
            
        }
        
    </script>
{% endblock %}