{% extends 'base.html.twig' %}

{% block title %}{% trans %}Admin home{% endtrans %}{% endblock %}

{% block breadcrumb %}
    {% set content = {
        'Admin': 'admin_index'
        } %}

    {{ parent() }}
{% endblock %}

{% block body %} 
    <div class="row justify-content-center align-items-center h-100">
        {% if app.user.company %}
            <h1 class="col-12 mb-2 text-primary font-weight-bold mb-0">{% trans with {'%name%': app.user.company.name ?: "Anonymous"|trans} %}Company %name% Numbers{% endtrans %}</h1>
        {% endif %}
        <div class="col-6 col-lg-3 mb-2">
            <a class="text-center btn-block btn btn-light" href="{{ path('admin_teams')}}">
                <h2 class="text-secondary display-2 animate-number">
                    {{ teams|length }}
                </h2>
                <p class="font-weight-bold text-secondary">{% trans %}TEAMS{% endtrans %}</p>
            </a>
        </div>

        <div class="col-6 col-lg-3 mb-2">
            <a class="text-center btn-block btn btn-light" href="{{ path('admin_users')}}">
                <h2 class="text-secondary display-2 animate-number">
                    {{ Users|length }}
                </h2>
                <p class="font-weight-bold text-secondary">{% trans %}USERS{% endtrans %}</p>
            </a>
        </div>

        <div class="col-6 col-lg-3 mb-2">
            <a class="text-center btn-block btn btn-light" href="{{ path('admin_clients')}}">
                <h2 class="text-secondary display-2 animate-number">
                    {{ Clients|length }}
                </h2>
                <p class="font-weight-bold text-secondary">{% trans %}CLIENTS{% endtrans %}</p>
            </a>
        </div>

        <div class="col-6 col-lg-3 mb-2">
            <a class="text-center btn-block btn btn-light" href="{{ path('admin_absences_index') }}">
                <h2 class="text-secondary display-2 animate-number">
                    {{ projects|length }}
                </h2>
                <p class="font-weight-bold text-secondary">{% trans %}PROJECTS{% endtrans %}</p>
            </a>
        </div>

        <div class="col-6 col-lg-3 mb-2">
            <a class="text-center btn-block btn btn-light" href="{{ path('admin_absences_index') }}">
                <h2 class="text-secondary display-2 animate-number">
                    {{ absences|length }}
                </h2>
                <p class="font-weight-bold text-secondary">{% trans %}ABSENCES{% endtrans %}</p>
            </a>
        </div>

        <div class="col-6 col-lg-3 mb-2">
            <a class="text-center btn-block btn btn-light" href="{{ path('admin_invitations')}}">
                <h2 class="text-secondary display-2 animate-number">
                    {{ app.user.company.invitations|length }}
                </h2>
                <p class="font-weight-bold text-secondary">{% trans %}INVITATIONS{% endtrans %}</p>
            </a>
        </div>
    </div>
{% endblock %}