
<div id="admin-menu" class="row mx-0 align-items-center px-0">
    <button class="btn btn-dark text-secondary col-lg-4 col-12 d-none d-lg-inline-block px-0" title='{% trans %}Admin Menu{% endtrans %}' type="button"><i class="fas fa-caret-right"></i></button>
    <div class="navigation col-lg-8 col-12 px-0">
        <a class="btn btn-dark text-secondary rounded-0 mt-0 w-100" title='{% trans %}Admin index{% endtrans %}' href="{{ path('admin_index')}}">
            <i class="fas fa-tachometer-alt float-left p-2"></i>
            <span class='float-left py-1'>{% trans %}Admin Home{% endtrans %}</span>
        </a>

        {% if is_granted('ROLE_COMPANY_LEADER') %}
            <a class="btn btn-dark text-secondary rounded-0 mt-0 w-100" title='{% trans %}Company{% endtrans %}' href="{{ path('admin_company_index')}}">
                <i class="far fa-building float-left p-2"></i>
                <span class='float-left py-1'>{% trans %}Company{% endtrans %}</span>
            </a>
        {% endif %}
        <a class="btn btn-dark text-secondary rounded-0 mt-0 w-100" title='{% trans %}Teams{% endtrans %}' href="{{ path('admin_teams')}}">
            <i class="fas fa-user-plus float-left p-2"></i>
            <span class='float-left py-1'>{% trans %}Teams{% endtrans %}</span>
        </a>
        
        <a class="btn btn-dark text-secondary rounded-0 mt-0 w-100" title='{% trans %}Users{% endtrans %}' href="{{ path('admin_users')}}">
            <i class="fas fa-users-cog float-left p-2"></i>
            <span class='float-left py-1'>{% trans %}Users{% endtrans %}</span>
        </a>

        <a class="btn btn-dark text-secondary rounded-0 mt-0 w-100" title="{% trans %}Absences{% endtrans %}" href="{{ path('admin_absences_index') }}">
            <i class="fas fa-plane float-left p-2"></i>
            <span class='float-left py-1'>{% trans %}Absences{% endtrans %}</span>
        </a>

        <a class="btn btn-dark text-secondary rounded-0 mt-0 w-100" title="{% trans %}Invitations{% endtrans %}" href="{{ path('admin_invitations')}}">
            <i class="fas fa-envelope-open-text float-left p-2"></i>
            <span class='float-left py-1'>{% trans %}Invitations{% endtrans %}</span>
        </a>

        <a class="btn btn-dark text-secondary rounded-0 mt-0 w-100" title='{% trans %}Projects{% endtrans %}'  href="{{ path('admin_projects')}}">
            <i class="fas fa-project-diagram float-left p-2"></i>
            <span class='float-left py-1'>{% trans %}Projects{% endtrans %}</span>
        </a>
        
        <a class="btn btn-dark text-secondary rounded-0 mt-0 w-100" title="{% trans %}Clients{% endtrans %}" href="{{ path('admin_clients')}}">
            <i class="fas fa-mug-hot float-left p-2"></i>
            <span class='float-left py-1'>{% trans %}Clients{% endtrans %}</span>
        </a>
    </div>
</div>
