{% extends 'base.html.twig' %}

{% block title %}{% trans %}Create Absence{% endtrans %}{% endblock %}

{% block breadcrumb %}
    {% set content = {
        'Home': 'app_index',
        'Account': 'my_account',
        'Create new absence': ''
        } %}

    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row pt-2 bg-light rounded">
        <h1 class="text-secondary text-center col-12">{% trans %}Create an Absence{% endtrans %}</h1>
        <p class="text-muted text-center col-12">{% trans %}I want to create new absence{% endtrans %}.</p>
        <div class="px-4 col-12 col-lg-10 offset-lg-1">
            {{ form_start(form) }}
                <div class="row">
                    <div class='col-12'>
                        {{ form_row(form.type) }}
                    </div>

                    <div class='col-12'>
                        <p class="text-primary mt-2 mb-0 text-center">{% trans %}Dates are included in absence{% endtrans %}.</p>
                    </div>

                    <div class='col-12 col-md-5'>
                        {{ form_row(form.from) }}
                    </div>

                    <div class='col-12 col-md-2 text-center'>
                        <div class='d-flex h-100 align-items-center justify-content-center'>
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </div>

                    <div class='col-12 col-md-5'>
                        {{ form_row(form.to) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $( function() {
            var dateFormat = "dd/mm/yy",
            from = $( "#form_from" )
                .datepicker({
                defaultDate: "+1w",
                dateFormat: dateFormat,
                changeMonth: true,
                numberOfMonths: 2,
                changeYear: true
                })
                .on( "change", function() {
                    console.log(getDate( this ));
                    to.datepicker( "option", "minDate", getDate( this ), "dateFormat", dateFormat);
                }),
            to = $( "#form_to" ).datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                dateFormat: dateFormat,
                numberOfMonths: 2,
                changeYear: true
            })
            .on( "change", function() {
                from.datepicker( "option", "maxDate", getDate( this ), "dateFormat", dateFormat);
            });
        
            function getDate( element ) {
                var date;
                try {
                    date = $.datepicker.parseDate( dateFormat, element.value );
                } catch( error ) {
                    date = null;
                }
        
            return date;
            }
        } );
    </script>
{% endblock %}