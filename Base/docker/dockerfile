FROM php:8.3-apache

# Définir le document root AVANT d'éditer les fichiers de conf Apache
ENV APACHE_DOCUMENT_ROOT=/var/www/html/public

# Installer les dépendances système
RUN apt-get update && apt-get install -y \
    git \
    zip \
    unzip \
    libxml2-dev \
    libcurl4-openssl-dev \
    libicu-dev \
    && docker-php-ext-install intl \
    && docker-php-ext-enable intl \
    && rm -rf /var/lib/apt/lists/*

# Installer les extensions PHP nécessaires
RUN docker-php-ext-install \
    pdo \
    pdo_mysql \
    xml \
    dom \
    simplexml \
    intl \
    opcache

# Installer les extensions PDO pour MySQL
RUN docker-php-ext-install pdo pdo_mysql

# Activer mod_rewrite pour Symfony
RUN a2enmod rewrite

# Définir le répertoire de travail
WORKDIR /var/www/html

# Installer Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

RUN sed -ri -e 's!/var/www/html!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/sites-available/*.conf \
    && sed -ri -e 's!Directory /var/www/!Directory ${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/apache2.conf

# Restaurer un ports.conf correct (supprime les doublons Listen)
RUN echo 'Listen 80\n<IfModule ssl_module>\n    Listen 443\n</IfModule>\n<IfModule mod_gnutls.c>\n    Listen 443\n</IfModule>' > /etc/apache2/ports.conf

EXPOSE 80